<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_search"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingVertical="16dp">

    <View
        android:layout_width="38dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rect"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/grey3"
        android:layout_marginTop="25dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/plane"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/plane_default"
                    android:contentDescription="@null" />
                <EditText
                    android:id="@+id/search_first_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Откуда - Москва"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey6"
                    android:padding="0dp"
                    android:textSize="16sp"
                    android:inputType="textCapSentences"
                    android:fontFamily="@font/sf_pro_display_semibold"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey4"
                android:layout_marginVertical="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/search_icn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/search_default"
                    android:contentDescription="@null"/>
                <EditText
                    android:id="@+id/search_second_input"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="Куда - Турция"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey6"
                    android:padding="0dp"
                    android:textSize="16sp"
                    android:inputType="textCapSentences"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/sf_pro_display_semibold"/>
                <ImageButton
                    android:id="@+id/clear_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/close_default"
                    android:layout_gravity="end"
                    android:backgroundTint="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="26dp"
        android:layout_marginHorizontal="16dp">
        <LinearLayout
            android:id="@+id/hard_nav"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/navigate_default"
                android:backgroundTint="@color/green"
                android:foregroundTint="@color/white"
                android:background="@drawable/rounded_rect"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:text="Сложный маршрут"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro_display_regular"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/random"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/hard_nav"
            app:layout_constraintEnd_toStartOf="@id/holidays"
            android:clickable="true">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/globus_default"
                android:backgroundTint="@color/blue"
                android:foregroundTint="@color/white"
                android:background="@drawable/rounded_rect"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:text="Куда угодно"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro_display_regular"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/holidays"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fire_tickets"
            app:layout_constraintStart_toEndOf="@id/random"
            android:clickable="true">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/calendar_default"
                android:backgroundTint="@color/darkBlue"
                android:foregroundTint="@color/white"
                android:background="@drawable/rounded_rect"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:text="Выходные"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro_display_regular"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fire_tickets"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/fire_default"
                android:backgroundTint="@color/red"
                android:foregroundTint="@color/white"
                android:background="@drawable/rounded_rect"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:text="Горячие билеты"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro_display_regular"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/grey3"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <LinearLayout
                android:id="@+id/search_first_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical"
                android:clickable="true">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/stambul"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Стамбул"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/sf_pro_display_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Популярное направление"
                        android:textSize="14sp"
                        android:textColor="@color/grey5"
                        android:fontFamily="@font/sf_pro_display_regular"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey4"/>
            <LinearLayout
                android:id="@+id/search_second_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical"
                android:clickable="true">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sochi"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сочи"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/sf_pro_display_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Популярное направление"
                        android:textSize="14sp"
                        android:textColor="@color/grey5"
                        android:fontFamily="@font/sf_pro_display_regular"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey4"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:id="@+id/search_third_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical"
                android:clickable="true">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/phuket"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Пхукет"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/sf_pro_display_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Популярное направление"
                        android:textSize="14sp"
                        android:textColor="@color/grey5"
                        android:fontFamily="@font/sf_pro_display_regular"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey4"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>